
{%- set source_engine = salt['pillar.get']('stackstorm:server:source:engine') %}

{%- load_yaml as base_defaults %}
{%- if source_engine == 'git' %}
Debian:
  pkgs:
  - python-psycopg2
  dir:
    base: /srv/stackstorm/venv
    home: /var/lib/stackstorm
    workspace: /srv/stackstorm/workspace
RedHat:
  pkgs:
  - python-psycopg2
  dir:
    base: /srv/stackstorm/venv
    home: /var/lib/stackstorm
    workspace: /srv/stackstorm/workspace
{%- else %}
Debian:
  pkgs:
  - stackstorm
  dir:
    base: /usr/lib/stackstorm
{%- endif %}
{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('stackstorm:server')) %}